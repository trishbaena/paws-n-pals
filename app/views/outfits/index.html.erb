<div class="container">
  <h1 class="text-center display-4 mt-4 mb-4"> Browse outfits for you and your pet!</h1>
  <div class="row">
    <% @outfits.each do |outfit| %>
      <div class="col-md-4 mb-3">
        <div class="card" style="width: 18rem;">
         <img class="card-img-top img-fluid" src="<%= outfit.photo_url %>" style="object-fit: cover; height: 200px;">
         <div class="card-body">
         <h5 class="card-title"><%= outfit.name %></h5>
         <p class="card-text"><strong>Price:</strong><span class="ms-1"><%= outfit.price %></span></p>
         <%= link_to 'Details', outfit_path(outfit), class: 'btn btn-primary' %>
         </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
