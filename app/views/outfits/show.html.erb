<div class="container mt-4">
  <div class="row gy-4">
    <div class="col-12 col-md-6 p-4">
      <h1><%= @outfit.name %></h1>

    </div>
    <div class="col-12 col-md-6 p-4">
      <h1>Outfit details</h1>
      <p class="card-text"><strong>Description: </strong><%= @outfit.description %></p>
      <%= cl_image_tag(@outfit.photo.key, height: 300, width: 400, crop: :fill)  %>
      <p class="card-text"><strong>Price: </strong>$<%= @outfit.price %></p>
      <p class="card-text"><strong>Category: </strong> <%= @outfit.category.name %></p>
      <div>
        <%= link_to "Request this outfit!",  new_outfit_request_path(@outfit), :class => "btn btn-primary" %>
        <%= link_to "Go Back to Browse", outfits_path, :class => "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
