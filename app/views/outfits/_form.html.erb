<%= simple_form_for @outfit do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.input :price %>


  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>

  <br><br>
  <%= f.submit @outfit.new_record? ? "Create Outfit" : "Update Outfit" %>
<% end %>
