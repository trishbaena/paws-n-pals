<div class="container mt-4">
  <div class="row gy-4">
    <div class="col-12 col-md-6 p-4">
      <h1><%= @outfit.name %></h1>
      <img class="rounded-4" src="<%= @outfit.photo_url %>" style="width: -moz-available;">
      <strong>Description:</strong> <%= @outfit.description %>
      <br>
      <strong>Price:</strong> $<%= @outfit.price %>/day
    </div>
    <div class="col-12 col-md-6 p-4">
      <h1>Request this outfit</h1>
      <%= render 'form' %>
      </div>
  </div>
</div>
